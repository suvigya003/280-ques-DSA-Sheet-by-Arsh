Problem link- https://leetcode.com/problems/subarray-sums-divisible-by-k/

Solution:
class Solution {
public:
    int subarraysDivByK(vector<int>& nums, int k) {
        vector<int>v(k,0);
        int sum=0;
        for(auto n:nums){
            sum+=n;
            int a=(sum%k+k)%k;
            v[a]++;
        }     
        int res=v[0];
        for(auto n:v){
            res+=n*(n-1)/2;
        }
        return res;
    }
};
